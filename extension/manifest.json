{
  // 清单文件的版本
  "manifest_version": 2,
  // 插件名称
  "name": "QuizRunner",
  // 插件版本
  "version": "1.0.0",
  // 插件描述
  "description": "Run Quiz Python Program",
  // 图标
  "icons":
  {
    "16": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon.png"
  },
  // 内容页
  "content_scripts": [
    {
    "matches": ["<all_urls>"],
    "js": ["js/jquery-1.8.3.js", "js/content-script.js"],
    "run_at": "document_start"
    }
  ],
  // 后台页
  "background":
  {
    "page": "html/background.html"
  },
  // 浏览器右上角图标设置
  "browser_action":
  {
    "default_icon": "img/icon.png",
    // 图标悬停时的标题，可选
    "default_title": "QuizRunner",
    "default_popup": "html/popup.html"
  },
  // 权限
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "contextMenus", // 右键菜单
    "notifications", // 通知
    "storage", // 插件本地存储
    "http://*/", 
    "https://*/",
    "https://cdn.jsdelivr.net/pyodide/v0.16.1/full/pyodide.js"
  ],
  // 默认语言
  "default_locale": "zh_CN",
  // 安全检查
  "content_security_policy": "script-src 'self' 'wasm-eval' https://cdn.jsdelivr.net; object-src 'self'"
}